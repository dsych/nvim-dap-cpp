{
    "name": "C++",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "features": {
        "ghcr.io/goropikari/devcontainer-feature/neovim:1": {}
    },
    "mounts": [
        "source=./example/nvim,target=/home/vscode/.config/nvim-dap,type=bind"
    ],
    "containerEnv": {
        "NVIM_APPNAME": "nvim-dap"
    },
    "remoteUser": "vscode"
}
